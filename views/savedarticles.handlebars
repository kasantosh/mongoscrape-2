{{> header}}

<div class="d-flex justify-content-center align-items-center bannermain">
    <div>
        <h1 class="display-1 font-weight-bold text-white-50">Articles Saved</h1>
    </div>
</div>
<div class="container my-3">
    {{#if result}}
    <div class="row">
        <div class="col-12">
            <h2 class="text-danger">
                Articles Saved
            </h2>
        </div>
    </div>

    <hr>
    {{#each result}}
    <div class="row">
        <div class="col-9">
            <h5>{{title}}</h5>
        </div>
        <div class="col-3">
            <a href="/save/{{ _id }}" class="btn btn-primary">Save Article</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <p>{{content}}</p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <p><em>-by {{author}}</em></p>
            </p>
        </div>
    </div>

    <hr>
    {{/each}}
    {{/if}}
</div>